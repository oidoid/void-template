{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/oidoid/void-template/refs/heads/main/src/level/level-file.json",
  "allOf": [{"$ref": "https://oidoid.github.io/void/level-file.v0.json"}],
  "$defs": {
    "Ent": {
      "allOf": [
        {
          "$ref": "https://oidoid.github.io/void/level-file.v0.json#/$defs/Ent"
        },
        {
          "type": "object",
          "properties": {
            "pizza": {"$ref": "#/$defs/Pizza", "unevaluatedProperties": false}
          }
        }
      ],
      "$comment": "to-do: `\"$dynamicAnchor\": \"Ent\"`."
    },
    "Pizza": {
      "type": "object",
      "description": "pizza config.",
      "properties": {
        "cheese": {"description": "cheese topping.", "type": "boolean"}
      }
    }
  },
  "unevaluatedProperties": false,
  "properties": {
    "ents": {
      "allOf": [
        {
          "$ref": "https://oidoid.github.io/void/level-file.v0.json#/properties/ents"
        }
      ],
      "items": {
        "$dynamicRef": "#Ent",
        "$ref": "#/$defs/Ent",
        "$comment": "to-do: delete root properties once dynamic refs are supported.",
        "unevaluatedProperties": false
      }
    }
  }
}
